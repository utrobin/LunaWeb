{
  "compilerOptions": {
    "removeComments": false,
    "module": "es6",
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "exclude": ["dist", "tests", "node_modules"]
}
